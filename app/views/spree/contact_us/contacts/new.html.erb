<% content_for :css_styles do %>
    <link rel="stylesheet" href="/assets/css/front/module.front.page.contact.min.css" />
<% end %>

<% content_for :js_scripts_bottom do %>
    <script src="http://maps.google.com/maps/api/js?v=3.5&amp;sensor=false"></script>
    <script src="/assets/components/modules/front/assets/custom/js/contact.js?v=v2.3.0"></script>
<% end %>

<div id="contact_gmap"></div>
<div class="container-960 innerT">

  <h3 class="glyphicons google_maps"><i></i>Контакты</h3>
  <div class="separator bottom"></div>

  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

  <div class="row">
    <div class="col-md-7">
      <%= form_for @contact, :url => contacts_path, :html => { :novalidate => '', class: 'row margin-none'} do |f| %>
        <div class="row">
          <div class="col-md-6">
            <% if SpreeContactUs.require_name %>
                <%= f.text_field :name, class: 'form-control col-md-12 required', placeholder: 'Ваше Имя' %>
            <% end %>
          </div>
          <div class="col-md-6">
            <%= f.email_field :email, class: 'form-control col-md-12 required email', placeholder: 'Ваш E-Mail' %>
          </div>
        </div>

        <div class="separator bottom"></div>

        <div class="row">
          <div class="col-md-12">
            <%= f.text_area :message, class: 'form-control required', rows: 5, placeholder: 'Ваше сообщение' %>
          </div>
        </div>

        <div class="separator bottom"></div>

        <div class="right">
          <%= f.button content_tag(:i) + 'Отправить сообщение', :id => 'contact_us_contact_submit', class: 'btn btn-primary btn-icon glyphicons envelope' %>
        </div>
      <% end %>
    </div>

    <%= render_snippet('/contacts_page') %>

  </div>

  <div class="separator bottom"></div>


<!-- Form -->
<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
  <label><%= Spree.t(:email) %></label>
    <%= f.email_field :email, :class => 'input-block-level form-control', :tabindex => 1, :placeholder => Spree.t(:email) %>
  <label><%= Spree.t(:password) %></label>
  <div class="clearfix"></div>
    <%= f.password_field :password, :class => 'input-block-level form-control margin-none', :tabindex => 2, :placeholder => Spree.t(:password) %>
  <div class="separator bottom"></div>
  <div class="row">
    <div class="col-md-8">
      <div class="uniformjs"><label class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me, Spree.t(:remember_me) %></label></div>
    </div>
    <div class="col-md-4 center">
      <%= f.submit Spree.t(:login), :class => 'btn btn-block btn-inverse', :tabindex => 3 %>
    </div>
  </div>
<% end %>
<!-- // Form END -->